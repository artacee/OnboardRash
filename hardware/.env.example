# Hardware Configuration
# Copy this file to .env and modify as needed

# Backend server URL (use your laptop's IP when testing)
SERVER_URL=http://192.168.1.40:5000
API_KEY=default-secure-key-123

# Bus identification
BUS_REGISTRATION=KL-01-AB-1234

# Sensor sampling rate in seconds (0.1 = 100ms = 10Hz)
SAMPLE_RATE=0.1

# Camera: enable or disable tailgating detection
ENABLE_CAMERA=true

# GPS Source: 'hardware' (NEO-6M serial) or 'phone' (Driver Companion App)
GPS_SOURCE=phone
PHONE_GPS_PORT=8081
